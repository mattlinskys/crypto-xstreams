{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2015", "DOM"],
    "jsx": "preserve",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
